{
  "name": "snippet-buddy",
  "publisher": "tyuksek",
  "displayName": "Snippet Buddy",
  "description": "Kod parçacıklarını kolayca kaydet ve tekrar kullan",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:snippetBuddy.saveSnippet",
    "onCommand:snippetBuddy.listSnippets"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "snippetBuddy.saveSnippet",
        "title": "Snippet Ekle"
      },
      {
        "command": "snippetBuddy.listSnippets",
        "title": "Snippet Listele"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "snippetBuddy.saveSnippet",
          "when": "editorHasSelection",
          "group": "navigation"
        },
        {
          "command": "snippetBuddy.listSnippets",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.15.20",
    "@types/vscode": "^1.85.0",
    "@vscode/test-electron": "^2.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "snippet-buddy": "file:"
  }
}
